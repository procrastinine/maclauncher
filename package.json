{
  "name": "maclauncher",
  "private": true,
  "version": "0.1.0",
  "description": "Mac-first Electron launcher with modular engine support",
  "main": "src/main/main.js",
  "scripts": {
    "dev": "node scripts/dev.mjs",
    "dev:debug": "node scripts/dev.mjs --debug",
    "smoke": "node scripts/run-testing.mjs smoke",
    "test": "node scripts/run-testing.mjs test",
    "build": "vite build --config vite.config.mjs",
    "package:mac": "node scripts/package-mac.mjs",
    "preview": "vite preview --config vite.config.mjs --host 127.0.0.1 --port 5173"
  },
  "dependencies": {
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@electron/notarize": "^2.5.0",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  },
  "build": {
    "appId": "com.maclauncher.launcher",
    "productName": "MacLauncher",
    "directories": {
      "buildResources": "build",
      "output": "dist/app"
    },
    "files": [
      "dist/renderer/**",
      "src/**",
      "package.json",
      "!docs/**",
      "!scripts/**",
      "!**/.DS_Store",
      "!src/resources/**",
      "!src/external/**"
    ],
    "extraResources": [
      {
        "from": "src/resources",
        "to": ".",
        "filter": [
          "**/*",
          "!**/.DS_Store"
        ]
      },
      {
        "from": "src/external",
        "to": "external",
        "filter": [
          "**/*",
          "!**/.DS_Store",
          "!**/.git",
          "!**/.git/**"
        ]
      }
    ],
    "asar": true,
    "asarUnpack": [
      "src/modules/rgss/resources/mkxpz/**/*.app/**"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.games",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "afterPack": "scripts/after-pack.js",
    "afterSign": "scripts/notarize.js"
  }
}
